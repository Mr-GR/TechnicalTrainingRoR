<%= turbo_frame_tag "search_results" do %>
    <% users.each do |u| %>
        <li class="mt-3">
            <div class="d-flex justify-content-between">
                <div class="d-flex">
                    <%= image_tag u.profile_pic.attached? ? u.profile_pic : 'users-pp.png', class: "img-thumbnail rounded-circle border", style: "width: 2.5rem" %>
                    <div class="d-flex flex-column mx-3 justify-content-center">
                        <small class="fw-bold" style="overflow: hidden;text-overflow: ellipis;white-space: nowrap;max-width:10rem"> <%= link_to u, class: "a-decoration-none", data: {turbo: false} do %><%= u.username %> <% end %> </small>
                    </div>
                </div> 
            </div>
        </li>
    <% end %>
<% end %>

